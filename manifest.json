{
    "manifest_version": 3,
    "name": "Переглядач коментарів для zno.osvita.ua",
    "description": "Дозволяє переглядати коментарі безкоштовно",
    "author": "DinGis",
    "version": "1.0.0",
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Відкрити налаштування"
    },
    "content_scripts": [
        {
            "js": ["scripts/index.js"],
            "matches": [
            "https://zno.osvita.ua/*"
            ]
        }
    ]
}